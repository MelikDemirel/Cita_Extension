{
  "manifest_version": 2,
  "name": "CHİTA",
  "description": "ÇOCUĞUNUZU KORUR VE GÖZETİR.",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
} 
